		//--导出Excel
		var formId = ajaxDownloadFile(sy.bp()+"/rptInOutController.do?exportInOutDataToExcel", param);
		downloadCheckTimer = window.setInterval(function () {
			window.clearInterval(downloadCheckTimer);
			$('#'+formId).remove();
