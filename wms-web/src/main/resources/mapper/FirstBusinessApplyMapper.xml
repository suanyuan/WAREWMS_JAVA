<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wms.mybatis.dao.FirstBusinessApplyMybatisDao" >
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.wms.entity.FirstBusinessApply" >
	<result column="apply_id" property="applyId"/>
	<result column="client_id" property="clientId"/>
	<result column="supplier_id" property="supplierId"/>
	<result column="create_id" property="createId"/>
	<result column="create_date" property="createDate"/>
	<result column="edit_id" property="editId"/>
	<result column="edit_date" property="editDate"/>
	<result column="is_use" property="isUse"/>
	<result column="first_state" property="firstState"/>
</resultMap>

<!-- Result Map-->
<resultMap id="PageResultMap" type="com.wms.result.FirstBusinessApplyResult" >
	<result column="apply_id" property="applyId"/>
	<result column="client_id" property="clientId"/>
	<result column="client_name" property="clientName"/>
	<result column="supplier_id" property="supplierId"/>
	<result column="supplier_name" property="supplierName"/>
	<result column="product_code" property="productCode"/>
	<result column="product_name" property="productName"/>
	<result column="create_id" property="createId"/>
	<result column="create_date" property="createDate"/>
	<result column="edit_id" property="editId"/>
	<result column="edit_date" property="editDate"/>
	<result column="is_use" property="isUse"/>
	<result column="first_state" property="firstState"/>
</resultMap>
       
<!-- first_business_apply table all fields -->
<sql id="Base_Column_List" >
	 apply_id,client_id,supplier_id,create_id,create_date,edit_id,edit_date,is_use,first_state
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="condition.applyId != null and condition.applyId != ''" >
	    and apply_id =  #{condition.applyId}
	</if>
	<if test="condition.clientId != null and condition.clientId != ''" >
	    and client_id =  #{condition.clientId}
	</if>
	<if test="condition.supplierId != null and condition.supplierId != ''" >
	    and supplier_id =  #{condition.supplierId}
	</if>
	<if test="condition.createId != null and condition.createId != ''" >
	    and create_id =  #{condition.createId}
	</if>
	<if test="condition.createDate != null and condition.createDate != ''" >
	    and create_date =  #{condition.createDate}
	</if>
	<if test="condition.editId != null and condition.editId != ''" >
	    and edit_id =  #{condition.editId}
	</if>
	<if test="condition.editDate != null and condition.editDate != ''" >
	    and edit_date =  #{condition.editDate}
	</if>
	<if test="condition.isUse != null and condition.isUse != ''" >
	    and is_use =  #{condition.isUse}
	</if>
	<if test="condition.firstState != null and condition.firstState != ''" >
		and first_state =  #{condition.firstState}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  insert into first_business_apply(apply_id,client_id,supplier_id,create_id,create_date,edit_id,edit_date,is_use,first_state)
 values(#{applyId},#{clientId},#{supplierId},#{createId},now(),#{editId},#{editDate},#{isUse},#{firstState})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  update first_business_apply set client_id=#{clientId},supplier_id=#{supplierId},create_id=#{createId},create_date=#{createDate},edit_id=#{editId},edit_date=#{editDate},is_use=#{isUse},first_state=#{firstState} where apply_id=#{applyId}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update first_business_apply set 
	<trim  suffixOverrides="," >
	<if test="clientId != null  ">
		client_id=#{clientId},
	</if>
	<if test="supplierId != null  ">
		supplier_id=#{supplierId},
	</if>
	<if test="createId != null  ">
		create_id=#{createId},
	</if>
	<if test="createDate != null  ">
		create_date=#{createDate},
	</if>
	<if test="editId != null  ">
		edit_id=#{editId},
	</if>
	<if test="editDate != null  ">
		edit_date=#{editDate},
	</if>
	<if test="isUse != null  ">
		is_use=#{isUse},
	</if>
	<if test="firstState != null  ">
		first_state=#{firstState},
	</if>
	</trim> where apply_id=#{applyId}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete 	 from first_business_apply where apply_id = #{applyId}
</delete>
 
<!-- 根据id查询 产品首营申请记录 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from first_business_apply where apply_id = #{applyId}
</select>

<!-- 产品首营申请记录 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from first_business_apply 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询产品首营申请记录列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from first_business_apply 
	<include refid="Example_Where_Clause"/>
	<if test="orderByClause != null and orderByClause != ''" >
       order by  ${orderByClause}
    </if>
    <if test="limitClause != null and limitClause != ''" >
       ${limitClause}
    </if>
</select>


<!-- 申请记录查询条件 -->
<sql id="Example_Where_Clause_Page">
	where 1=1
	<trim  suffixOverrides="," >
		<if test="condition.applyId != null and condition.applyId != ''" >
			and t1.apply_id =  #{condition.applyId}
		</if>
		<if test="condition.clientId != null and condition.clientId != ''" >
			and t1.client_id =  #{condition.clientId}
		</if>
		<if test="condition.supplierId != null and condition.supplierId != ''" >
			and t1.supplier_id =  #{condition.supplierId}
		</if>
		<if test="condition.createId != null and condition.createId != ''" >
			and t1.create_id =  #{condition.createId}
		</if>
		<if test="condition.editId != null and condition.editId != ''" >
			and t1.edit_id =  #{condition.editId}
		</if>
		<if test="condition.isUse != null and condition.isUse != ''" >
			and t1.is_use =  #{condition.isUse}
		</if>
		<if test="condition.productCode != null and condition.productCode != ''" >
			and t1.product_code like CONCAT('%',#{condition.productCode},'%')
		</if>
		<if test="condition.productName != null and condition.productName != ''" >
			and t1.product_name like CONCAT('%',#{condition.productName},'%')
		</if>
		<if test="condition.firstState != null and condition.firstState != ''" >
			and t1.first_state =  #{condition.firstState}
		</if>
	</trim>
</sql>


<!-- 查询产品首营申请记录列表 -->
<select id="queryPageList" resultMap="PageResultMap"  parameterType="Object">
	select
	sp.product_code,sp.product_name,t1.apply_id,client_id,eic.enterprise_name client_name,supplier_id,eis.enterprise_name supplier_name,t1.create_id,t1.create_date,t1.edit_id,t1.edit_date,t1.is_use,t1.first_state
	from first_business_apply t1 left join first_business_product_apply t2 on t1.apply_id = t2.apply_id
	left join gsp_product_register_specs sp on t2.specs_id = sp.specs_id
	left join gsp_enterprise_info eic on client_id = eic.enterprise_id
	left join gsp_enterprise_info eis on client_id = eis.enterprise_id
	<!-- 查询条件 -->
	<include refid="Example_Where_Clause_Page"/>

	<if test="orderByClause != null and orderByClause != ''" >
		order by  ${orderByClause}
	</if>
	<if test="limitClause != null and limitClause != ''" >
		${limitClause}
	</if>
</select>

<!-- 查询产品首营申请记录列表 -->
<select id="queryPageListCount" resultType="java.lang.Long"  parameterType="Object">
	select
	count(1)
	from first_business_apply t1 left join first_business_product_apply t2 on t1.apply_id = t2.apply_id
	left join gsp_product_register_specs sp on t2.specs_id = sp.specs_id
	left join gsp_enterprise_info eic on client_id = eic.enterprise_id
	left join gsp_enterprise_info eis on client_id = eis.enterprise_id
	<!-- 查询条件 -->
	<include refid="Example_Where_Clause_Page"/>

	<if test="orderByClause != null and orderByClause != ''" >
		order by  ${orderByClause}
	</if>
	<if test="limitClause != null and limitClause != ''" >
		${limitClause}
	</if>
</select>
  	
</mapper>   
